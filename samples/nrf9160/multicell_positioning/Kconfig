menu "Multicell positioning"

config MULTICELL_PERIODIC_SEARCH
	bool "Periodically search for neighbor cells"

config MULTICELL_PERIODIC_SEARCH_INTERVAL
	int "Periodic search interval [sec]"
	default 60

config MULTICELL_BUTTON_TRIG_SEARCH
	bool "Trigger neighbor search with button 1"
	default y

config MULTICELL_PRINT_DATA
	bool "Print multicell data"
	default y
	help
	  Prints cell data when it's reported from the link controller.
choice
	prompt "Positioning service to use"
	default MULTICELL_SERVICE_NONE

config MULTICELL_SERVICE_NONE
	bool "No service"

config MULTICELL_SERVICE_HERE
	bool "HERE positioning service"

config MULTICELL_SERVICE_SKYHOOK
	bool "Skyhook positioning service"

endchoice

if MULTICELL_SERVICE_HERE
choice
	prompt "HERE Positioning API version"
	default MULTICELL_HERE_V2

config MULTICELL_HERE_V1
	bool "HERE API v1"

config MULTICELL_HERE_V2
	bool "HERE API v2"

endchoice

choice
	prompt "HERE authentication method"
	default MULTICELL_HERE_USE_API_KEY

config MULTICELL_HERE_USE_API_KEY
	bool "Use API key"

config MULTICELL_HERE_USE_APP_CODE_ID
	bool "Use app code and ID"

endchoice

config MULTICELL_HERE_HOSTNAME
	string "HERE hostname"
	default "pos.api.here.com" if MULTICELL_HERE_V1
	default "positioning.hereapi.com" if MULTICELL_HERE_V2

config MULTICELL_HERE_API_KEY
	string "HERE API key"
	depends on MULTICELL_HERE_USE_API_KEY

if MULTICELL_HERE_USE_APP_CODE_ID
config MULTICELL_HERE_APP_CODE
	string "HERE APP code"

config MULTICELL_HERE_APP_ID
	string "HERE APP ID"

endif # MULTICELL_HERE_USE_APP_CODE_ID
endif # MULTICELL_SERVICE_HERE


if MULTICELL_SERVICE_SKYHOOK

config MULTICELL_SKYHOOK_API_KEY
	string "Skyhook API key"

config MULTICELL_SKYHOOK_HOSTNAME
	string "Skyhook hostname"
	default "global.skyhookwireless.com"

endif # MULTICELL_SERVICE_SKYHOOK

endmenu

menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu

module = MULTICELL_POSITIONING
module-str = Multicell positioning sample
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"
